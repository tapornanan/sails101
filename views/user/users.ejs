<h4>All registered users: </h4>

<div class="row">
    <% for(var i = 0 ; i < data.length ; i++ ) { %>
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="https://www.fillmurray.com/150/180" alt="Card image cap">
                <div class="card-body">
                <h5 class="card-title"><%= data[i].firstname + ' ' + data[i].lastname %></h5>
                <p class="card-text"><%= data[i].quote %></p>
                <a href="/user/<%= data[i].id %>" class="btn btn-primary">View profile</a>
                </div>
            </div>
        </div>
    <% } %>
</div>