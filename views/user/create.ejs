<form method="post" action="/createnewuser">
  <div class="form-group">
    <label for="exampleInputEmail1">Firstname</label>
    <input type="text" name="firstname" class="form-control" aria-describedby="emailHelp" placeholder="Firstname">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Lastname</label>
    <input type="text" name="lastname" class="form-control" aria-describedby="emailHelp" placeholder="Lastname">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Your position</label>
    <input type="text" name="position" class="form-control" aria-describedby="emailHelp" placeholder="Position">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Age</label>
    <input type="number" name="age" class="form-control" aria-describedby="emailHelp" placeholder="Age">
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Quote</label>
